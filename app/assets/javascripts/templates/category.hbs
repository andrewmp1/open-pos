<h3>{{name}}</h3>

<ul class = "products-list">
	{{#each product in products}}
		<li>
			<a href="#" {{action "addListItem" product}}>
				<div class="panel">
					<h4>{{product.name}} </h4>
					<p>{{product.description}}</p>
					<strong>${{money product.priceCents}}</strong>
				</div>
			</a>
		</li>
	{{/each}}
</ul>
{{outlet}}
